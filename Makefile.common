CC	= gcc
CFLAGS	= -Wall -O2 -fomit-frame-pointer $(EXTRA_FLAGS) -I$(TOPDIR)/src/hd
# CFLAGS	= -Wall -g -O -I$(TOPDIR)/src/hd
LDFLAGS	= -Lsrc -lhd

CFILES	= $(wildcard *.c)
OBJS	= $(CFILES:.c=.o)
LIBHD	= $(TOPDIR)/src/libhd.a
LIBHD_T	= $(TOPDIR)/src/libhd_tiny.a
LIBHD_D	= $(TOPDIR)/src/.lib

ARCH	= $(shell uname -m)

export CC TOPDIR CFLAGS LIBHD ARCH

.PHONY: all clean install subdirs

%.o: %.c
	$(CC) -c $(CFLAGS) $<

all: subdirs $(TARGETS)

install: all

ifneq "$(SUBDIRS)" ""
subdirs:
	@for i in $(SUBDIRS) ; do make -C $$i $(MAKECMDGOALS) ; done
endif

clean: subdirs
	@rm -f $(OBJS) .depend $(CLEANFILES) *~

ifneq "$(CFILES)" ""
ifneq "$(MAKECMDGOALS)" "clean"
.depend: $(CFILES)
	@$(CC) -MM $(CFLAGS) $(CFILES) >$@

-include .depend
endif
endif
