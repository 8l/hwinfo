#!/bin/sh

rm -f /var/lib/hardware/LOCK

neededchanged=`/usr/sbin/hwscan --mouse`
if [ -n "$neededchanged" ] ; then
	/sbin/yast2 mouse '(.reprobe)'
fi

neededchanged=`/usr/sbin/hwscan --gfxcard`
if [ -n "$neededchanged" ] ; then
	/sbin/yast2 x11 '(.reprobe)'
fi
/usr/sbin/hwscan --pci
/usr/sbin/hwscan --isapnp
exit 0
